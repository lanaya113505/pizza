      background-color: #f9f9f9;
    }

    #video-container {
      position: relative;
      display: block;
      margin-top: 30px;
      width: 560px;
      height: 315px;
      margin-left: auto;
      margin-right: auto;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    iframe {
      width: 100%;
      height: 100%;
      border: 0;
    }

    #overlay-lock {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.6);
      color: #fff;
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 18px;
      z-index: 10;
      cursor: not-allowed;
      transition: opacity 0.3s ease;
    }

    #confirm-login {
      margin-top: 20px;
      display: none;
    }

    #confirm-login button {
      padding: 10px 20px;
      font-size: 14px;
      border: none;
